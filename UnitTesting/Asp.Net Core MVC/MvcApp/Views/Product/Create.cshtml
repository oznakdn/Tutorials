@model MvcApp.Entity.Product

@{
    ViewData["Title"] = "CreateProduct";
}

<div class="row">
    <div class="col-8 offset-4">
        <form method="post" asp-action="Create" class="w-75">
            <div class="form-group">
                <label asp-for="ProductName" class="form-label"></label>
                <input type="text" asp-for="ProductName" class="form-control">
            </div>
            <div class="form-group">
                <label asp-for="Price" class="form-label"></label>
                <input type="number" asp-for="Price" class="form-control">
            </div>
            <div class="form-group">
                <label asp-for="Stock" class="form-label"></label>
                <input type="number" asp-for="Stock" class="form-control">
            </div>
            <div class="form-group">
                <label asp-for="Color" class="form-label"></label>
                <input type="text" asp-for="Color" class="form-control">
            </div>
            <div class="form-group mt-3">
                <button type="submit" class="btn btn-primary">Add</button>
            </div>
        </form>
    </div>
</div>