@model IEnumerable<MvcApp.Entity.Product>


<div class="row">
    <a asp-controller="Product" asp-action="Create" class="btn btn-success">New product</a>
    <div class="col-10 mt-3">
        <table class="table">
            <thead>
                <tr class="text-center">
                    <th>Id</th>
                    <th>Product Name</th>
                    <th>Price</th>
                    <th>Stock</th>
                    <th>Color</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                <tr class="text-center">
                    @foreach (var item in Model)
                    {
                        <td>@item.Id</td>
                        <td>@item.ProductName</td>
                        <td>@item.Price</td>
                        <td>@item.Stock</td>
                        <td>@item.Color</td>
                        <td>
                            <a asp-action="Details" asp-controller="Product" asp-route-id="@item.Id"
                            class="btn btn-info">Detail</a>
                            <a asp-action="Edit" asp-controller="Product" asp-route-id="@item.Id"
                            class="btn btn-warning">Update</a>
                            <a asp-action="Delete" asp-controller="Product" asp-route-id="@item.Id"
                            class="btn btn-danger">Delete</a>
                        </td>
                    }
                </tr>
            </tbody>
        </table>
    </div>
</div>